(def (sqrt x)
    (def (good-enough guess)
        (< (abs (- (pow guess 2) x)) 0.001))
    (def (improve guess)
        (average guess (/ x guess)))
    (def (sqrt-iter guess)
        (if (good-enough guess)
            guess
            (sqrt-iter (improve guess))))
        (sqrt-iter 1.0))
(while true
    (print "Input Number: ")
    (def n (read-num))
    (println "sqrt(" n ")=" (sqrt n)))